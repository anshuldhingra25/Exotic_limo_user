<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>


    <style name="PrimarycolorThemeSplash" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>

    <!-- Theme for custom toolbar and DrawerArrow color Change for Other class -->
    <style name="NoActionBar_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>


    <!-- Transparent theme -->
    <color name="custom_theme_color">#ccffffff</color>
    <color name="pushnotification_custom_theme_color">#80000000</color>
    <color name="pushnotification_custom_payment_theme_color">#F2ffffff</color>

    <style name="NoActionBar_Transparent_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PushNotificaton_NoActionBar_Transparent_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/pushnotification_custom_theme_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PushNotificaton_NoActionBar_Payment_Transparent_Theme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="android:windowBackground">@color/pushnotification_custom_payment_theme_color</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>


    <style name="SmallProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/greenprogress</item>
        <item name="android:minHeight">4dip</item>
        <item name="android:maxHeight">4dip</item>
    </style>


    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">23dip</item>
        <item name="android:maxHeight">23dip</item>
    </style>


</resources>
